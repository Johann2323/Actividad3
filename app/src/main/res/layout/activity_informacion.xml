<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
        name="usuario"
        type="com.example.actividad2.Usuario"
            />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityInformacion">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="304dp"
            android:layout_height="51dp"
            android:layout_marginBottom="44dp"
            android:text="Acceso Satisfactorio"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/ratingBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent" />

        <view
            android:id="@+id/view"
            class="androidx.appcompat.widget.ActionMenuView"
            android:layout_width="412dp"
            android:layout_height="73dp"
            android:background="#04AFFB"
            tools:layout_editor_absoluteX="-1dp"
            tools:layout_editor_absoluteY="-12dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txt_usuario"
            android:layout_width="356dp"
            android:layout_height="58dp"


            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:isIndicator="true"
            app:layout_constraintBottom_toTopOf="@+id/txt_descrip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txt_descrip"
            android:layout_width="375dp"
            android:layout_height="64dp"
            android:layout_marginBottom="96dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#F44336"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/img_informacion"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:srcCompat="@drawable/user"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/txt_getcorreo"

            android:layout_width="371dp"
            android:layout_height="59dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#3F51B5"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_descrip"
            app:layout_constraintVertical_bias="0.448"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txt_rols"
            android:layout_width="389dp"
            android:layout_height="35dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#2196F3"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_usuario" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>